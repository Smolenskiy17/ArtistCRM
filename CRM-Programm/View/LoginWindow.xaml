<Window x:Class="CRM_Programm.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CRM_Programm.View"
        mc:Ignorable="d"
        Title="Вход" Height="250" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Электронная почта:"/>
            <TextBox x:Name="EmailBox" Margin="10"/>
            <Label Content="Пароль:"/>
            <PasswordBox x:Name="PasswordBox" Margin="10"/>
            <Button Name="OnLoginSubmitBtn"
                Content="Войти" 
                Click="OnLoginSubmitBtn_Click" 
                Margin="10" 
                Width="150"
                Height="35"/>
        </StackPanel>
    </Grid>
</Window>
