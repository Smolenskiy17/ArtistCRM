<Window x:Class="ArtistCRM.View.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtistCRM.View"
        mc:Ignorable="d"
        Title="Редактировать профиль" Height="350" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Source="\Resources\Безымянный-1-2.jpg" Width="50" Margin="318,-5,10,5"/>
        
        <Label Content="Псевдоним:" Grid.Row="0" Margin="5" Width="Auto" Height="Auto"/>
        <TextBox Name="NicknameTb" Grid.Row="1" Margin="5" Width="Auto" Height="Auto"/>

        <Label Content="Имя:" Grid.Row="2" Margin="5" Width="Auto" Height="Auto"/>
        <TextBox Name="FirstNameTb" Grid.Row="3" Margin="5" Width="Auto" Height="Auto"/>

        <Label Content="Биография:" Grid.Row="4" Margin="5" Width="Auto" Height="Auto"/>
        <TextBox Name="BiographyTb" TextWrapping="Wrap" Grid.Row="5" Margin="5" Width="Auto" Height="Auto"/>

        <Button Grid.Row="6" Name="SaveBtn" Click="SaveBtn_Click" Content="Сохранить" Margin="5" Height="20" Width="130"/>
        <Button Grid.Row="7" Name="CancelBtn" Click="CancelBtn_Click" Content="Отмена" Margin="5" Height="20" Width="130"/>
    </Grid>
</Window>
